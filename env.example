# WEEX API Configuration
WEEX_API_KEY=your_api_key_here
WEEX_SECRET_KEY=your_secret_key_here
WEEX_PASSPHRASE=your_passphrase_here

# Environment: production or testnet
WEEX_ENV=testnet

# API Base URL (optional, defaults to official URL)
# WEEX_API_BASE_URL=https://api.weex.com

# WebSocket URL (optional, defaults to official URL)
# WEEX_WS_URL=wss://ws.weex.com

# Log Level: debug, info, warn, error
LOG_LEVEL=info

# Log Output: console, file, both
LOG_OUTPUT=console

# Trading Configuration
# Default symbol for trading
DEFAULT_SYMBOL=cmt_btcusdt

# Risk Management
MAX_POSITION_SIZE=1000.0
MAX_DRAWDOWN=0.1
STOP_LOSS_PERCENTAGE=0.02
TAKE_PROFIT_PERCENTAGE=0.05

# Database (if used)
# DB_TYPE=sqlite
# DB_PATH=./data/trading.db

